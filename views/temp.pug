#screen
  .signup-container
    input(type='text', placeholder='email')
    input(type='password', placeholder='password')
    button(type='submit') Sign Up


    .row
      .container
        .jumbotron.text-center
          h1 Signup Form

        form(action='/book/add' method='post')
          .form-group
            label.control-label(for='name') Name
            input#ISBN.form-control(type='text', name='isbn')
          .form-group
            label.control-label(for='username') username
            input#title.form-control(type='text', name='title')
          .form-group
            label.control-label(for='email') email
            input#author.form-control(type='text', name='author')
          .form-group
            label.control-label(for='password') password
            input#category.form-control(type='text', name='category')

          .form-group
            button.btn.btn-success(type="submit") Signup
